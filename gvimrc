if has("gui_macvim")
    " MacVim options
    
    " Smooth fonts
    set antialias
    " UTF-8 everywhere
    set encoding=utf-8
    " hide toolbar
    set guioptions-=T
    " hide right scrollbar
    set guioptions-=r
    set guioptions-=R
    " hide left scrollbar
    set guioptions-=l
    set guioptions-=L
endif

