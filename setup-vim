#!/usr/bin/env bash
# vim: ft=sh
set -euo pipefail
IFS=$'\n\t'

PLUG_FILE=~/.vim/autoload/plug.vim
SPELL_PT_FILE=~/.vim/spell/pt.utf-8.spl
SPELL_EN_FILE=~/.vim/spell/en.utf-8.spl

if [ ! -f $SPELL_PT_FILE ]; then
  echo "Downloading the portuguese spell file"
  curl -fSsLo $SPELL_PT_FILE --create-dirs http://ftp.vim.org/pub/vim/runtime/spell/pt.utf-8.spl
fi

if [ ! -f $SPELL_EN_FILE ]; then
  echo "Downloading the english spell file"
  curl -fSsLo $SPELL_EN_FILE --create-dirs http://ftp.vim.org/pub/vim/runtime/spell/en.utf-8.spl
fi

if [ ! -f $PLUG_FILE ]; then
  echo "Download Plug (plugin manager for vim)"

  curl -fSsLo $PLUG_FILE --create-dirs https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim

  vim +PlugInstall +qall
fi
