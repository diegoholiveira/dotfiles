# ------------------------------------------------------------------------------
# Auto Complete
# ------------------------------------------------------------------------------
fpath=(/opt/homebrew/share/zsh-completions $fpath)

# ------------------------------------------------------------------------------
# Configure zsh
# ------------------------------------------------------------------------------
zstyle :compinstall filename '/Users/diegoholiveira/.zshrc'

autoload -Uz compinit
autoload -U colors
compinit

# ------------------------------------------------------------------------------
# Configure up and down to search the history
# ------------------------------------------------------------------------------
autoload -U up-line-or-beginning-search
autoload -U down-line-or-beginning-search
zle -N up-line-or-beginning-search
zle -N down-line-or-beginning-search
bindkey "^[[A" up-line-or-beginning-search   # Up
bindkey "^[[B" down-line-or-beginning-search # Down


# ------------------------------------------------------------------------------
# Colors: Nord Theme
# ------------------------------------------------------------------------------
if [ -f ~/.dir_colors ]; then
	eval "$(gdircolors -b ~/.dir_colors)"
fi
colors

# ------------------------------------------------------------------------------
# Aliases
# ------------------------------------------------------------------------------
alias cp="cp -iv"
alias icloud="cd ~/Library/Mobile\ Documents/com~apple~CloudDocs/"
alias ls="gls -lahF --group-directories-first --color=auto"
alias mkdir="mkdir -pv"
alias mv="mv -iv"
alias rm="rm -iv"
alias tailf="tail -f"
alias uuidgen="uuidgen | tr A-F a-f"
alias vim="nvim"

# ------------------------------------------------------------------------------
# Custom commands
# ------------------------------------------------------------------------------
search() {
  local pattern="$1"
  local folder="${2:-.}"   # default to current directory if not provided
  rg --hidden --ignore-case "$pattern" "$folder"
}

# ------------------------------------------------------------------------------
# Source other configurations
# ------------------------------------------------------------------------------
[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh

if [ -f ~/.zsh_private ]; then
	. ~/.zsh_private
fi

if [ -f ~/.zsh_aliases ]; then
	. ~/.zsh_aliases
fi

source /opt/homebrew/share/zsh-autosuggestions/zsh-autosuggestions.zsh
source <(starship init zsh --print-full-init)
if [ -f ~/.rye/env ]; then
	source ~/.rye/env
fi
if [ -f "$HOME/.cargo/env" ]; then
	source "$HOME/.cargo/env"
fi

eval "$(direnv hook zsh)"
