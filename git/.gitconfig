[advice]
	statusHints = false
[alias]
	amend = commit --amend -C HEAD
	publish = "!git push --set-upstream origin $(git rev-parse --abbrev-ref HEAD)"
	undo = reset --soft HEAD~1
	unstage = reset HEAD --
    sync = "!f() { \
        current_branch=$(git symbolic-ref --short HEAD); \
        target_branch=${1:-main}; \
        git switch $target_branch && git pull && git switch $current_branch && git rebase $target_branch; \
    }; f"
[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = auto
[core]
	excludesfile = ~/.gitexcludes
	attributesfile = ~/.gitattributes
[fetch]
	prune = true
[merge]
	tool = vimdiff
[pull]
	rebase = true
[push]
	default = tracking
[url "ssh://git@github.com/"]
	insteadOf = https://github.com/
[user]
	name = Diego Henrique Oliveira
	email = contato@diegoholiveira.com
	signingkey = ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIFfbDXZyCJFJNfyxQ202ck7uYm1zeCe8NSKPOYoYWExT
[commit]
	gpgsign = true
[init]
	defaultBranch = main
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
[gpg]
	format = ssh
[gpg "ssh"]
	program = /Applications/1Password.app/Contents/MacOS/op-ssh-sign
